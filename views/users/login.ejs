<% layout("/layouts/boilerplate")%>
<h1 class="col-6 offset-3">Login</h1>
<div class="row mt-3">
    <div class="col-6 offset-3">
       <form method="post" action="/login" class="needs-validation" novalidate>
        <div class="mb-3">
            <lable for="username" class="form-lable">Username</lable>
        <input name="username" type="text" id="username" class="form-control" required>
        <div class="mb-3">
            <lable for="password" class="form-lable">Password</lable>
        <input name="password" type="password" id="password" class="form-control" required>
        <button class="btn btn-success mt-3">Login</button>
       </form>
    </div>
</div>